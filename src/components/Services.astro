---
// Seção de Serviços com glassmorphism
---

<section id="services" class="py-16 relative overflow-hidden bg-background transition-colors duration-300">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 50px 50px;"></div>
  </div>

  <!-- Floating Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="floating-element absolute top-20 left-10 w-2 h-2 bg-[#00B050] rounded-full opacity-40"></div>
    <div class="floating-element absolute top-40 right-20 w-1 h-1 bg-foreground rounded-full opacity-30"></div>
    <div class="floating-element absolute bottom-40 left-20 w-1.5 h-1.5 bg-[#00B050] rounded-full opacity-35"></div>
    <div class="floating-element absolute bottom-20 right-40 w-1 h-1 bg-foreground rounded-full opacity-25"></div>
  </div>

  <div class="relative z-10 max-w-[1300px] mx-auto px-4 md:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12 md:mb-20 max-w-2xl mx-auto">
      <h2 class="text-2xl md:text-5xl font-bold mb-2 leading-tight">
        <span class="text-foreground">
          Nossos
        </span>
        <span class="bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">
          Serviços
        </span>
      </h2>
      
      <p class="text-base md:text-xl text-muted-foreground max-w-4xl mx-auto leading-relaxed">
        Oferecemos um portfólio completo de serviços digitais para transformar seu negócio e acelerar seu crescimento.
      </p>
    </div>

    <!-- Mobile Carousel -->
    <div class="md:hidden relative">
      <div id="services-carousel" class="overflow-hidden">
        <div id="carousel-inner" class="flex transition-transform duration-300">
          <!-- Os cards serão colocados aqui -->
        </div>
      </div>
      
      <!-- Indicador de progresso sutil -->
      <div class="flex justify-center mt-6 flex-col items-center">
        <!-- Barra de progresso -->
        <div class="w-32">
          <div class="h-2 border border-gray-800 rounded-full overflow-hidden">
            <div id="progress-bar" class="h-full bg-gradient-to-r from-[#00B050]/60 to-blue-400/60 rounded-full transition-all duration-500 ease-out" style="width: 25%"></div>
          </div>
        </div>
        <!-- Texto de instrução -->
        <p class="text-xs text-muted-foreground mt-2 flex items-center">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Deslize para ver os serviços
          <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </p>
      </div>
    </div>

    <!-- Desktop Grid -->
    <div class="hidden md:grid grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Sites & E-commerces -->
      <div class="group bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-[#00B050]/10 transition-all duration-500 hover:scale-105 hover:border-[#00B050]/30 p-8 h-full flex flex-col">
        <div class="absolute inset-0 bg-[#00B050]/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative z-10 flex flex-col h-full">
          <div class="w-16 h-16 bg-[#00B050]/20 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-[#00B050]/30 transition-colors duration-300 shadow-lg">
            <svg class="w-8 h-8 text-[#00B050]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-foreground mb-4">Sites & <br> E-commerces</h3>
          <p class="text-muted-foreground leading-relaxed mb-6 flex-grow">
            Sites modernos e lojas virtuais completas que fortalecem sua presença digital e geram vendas online.
          </p>
          <div class="space-y-3 mb-6">
            <div class="flex items-center text-sm text-[#00B050]">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Design Responsivo
            </div>
            <div class="flex items-center text-sm text-[#00B050]">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              SEO Otimizado
            </div>
            <div class="flex items-center text-sm text-[#00B050]">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Pagamentos Online
            </div>
          </div>
          <div class="mt-auto pt-4 border-t border-border">
            <div class="flex items-center text-sm text-[#00B050] font-medium">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Entrega em 15-30 dias
            </div>
          </div>
        </div>
      </div>

      <!-- Apps Mobile & Web Apps -->
      <div class="group bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-blue-500/10 transition-all duration-500 hover:scale-105 hover:border-blue-500/30 p-8 h-full flex flex-col">
        <div class="absolute inset-0 bg-blue-500/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative z-10 flex flex-col h-full">
          <div class="w-16 h-16 bg-blue-500/20 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-blue-500/30 transition-colors duration-300 shadow-lg">
            <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-foreground mb-4">Apps Mobile & <br>Web Apps</h3>
          <p class="text-muted-foreground leading-relaxed mb-6 flex-grow">
            Aplicativos personalizados para melhorar a experiência dos seus clientes, equipe ou negócio.
          </p>
          <div class="space-y-3 mb-6">
            <div class="flex items-center text-sm text-blue-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Interface Intuitiva
            </div>
            <div class="flex items-center text-sm text-blue-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Multiplataforma
            </div>
            <div class="flex items-center text-sm text-blue-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Notificações Push
            </div>
          </div>
          <div class="mt-auto pt-4 border-t border-border">
            <div class="flex items-center text-sm text-blue-400 font-medium">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 2h10a2 2 0 012 2v16a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2z"/>
              </svg>
              iOS e Android
            </div>
          </div>
        </div>
      </div>

      <!-- Sistemas & Plataformas -->
      <div class="group bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-purple-500/10 transition-all duration-500 hover:scale-105 hover:border-purple-500/30 p-8 h-full flex flex-col">
        <div class="absolute inset-0 bg-purple-500/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative z-10 flex flex-col h-full">
          <div class="w-16 h-16 bg-purple-500/20 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-purple-500/30 transition-colors duration-300 shadow-lg">
            <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-foreground mb-4">Sistemas & Plataformas</h3>
          <p class="text-muted-foreground leading-relaxed mb-6 flex-grow">
            Sistemas personalizados para gestão interna, processos específicos e necessidades do seu negócio.
          </p>
          <div class="space-y-3 mb-6">
            <div class="flex items-center text-sm text-purple-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Dashboards
            </div>
            <div class="flex items-center text-sm text-purple-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Relatórios
            </div>
            <div class="flex items-center text-sm text-purple-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Integrações
            </div>
          </div>
          <div class="mt-auto pt-4 border-t border-border">
            <div class="flex items-center text-sm text-purple-400 font-medium">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11C13.657 11 15 9.657 15 8V6a3 3 0 00-6 0v2c0 1.657 1.343 3 3 3zM5 11h14a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2z"/>
              </svg>
              Escalável e seguro
            </div>
          </div>
        </div>
      </div>

      <!-- Automação de Processos -->
      <div class="group bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-orange-500/10 transition-all duration-500 hover:scale-105 hover:border-orange-500/30 p-8 h-full flex flex-col">
        <div class="absolute inset-0 bg-orange-500/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative z-10 flex flex-col h-full">
          <div class="w-16 h-16 bg-orange-500/20 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-orange-500/30 transition-colors duration-300 shadow-lg">
            <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-foreground mb-4">Automação de Processos</h3>
          <p class="text-muted-foreground leading-relaxed mb-6 flex-grow">
            Automatizamos tarefas e otimizamos processos, eliminando atividades manuais do seu dia a dia.
          </p>
          <div class="space-y-3 mb-6">
            <div class="flex items-center text-sm text-orange-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              APIs & Webhooks
            </div>
            <div class="flex items-center text-sm text-orange-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Fluxos Automáticos
            </div>
            <div class="flex items-center text-sm text-orange-400">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Notificações
            </div>
          </div>
          <div class="mt-auto pt-4 border-t border-border">
            <div class="flex items-center text-sm text-orange-400 font-medium">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              Economiza até 80% do tempo
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Elementos do carrossel
  const carousel = document.getElementById('services-carousel');
  const carouselInner = document.getElementById('carousel-inner');
  const progressBar = document.getElementById('progress-bar');

  // Dados dos serviços
  const services = [
    {
      title: 'Sites & <br> E-commerces',
      icon: 'M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9',
      color: '#00B050',
      bgIcon: 'rgba(0,176,80,0.2)',
      overlayBg: 'rgba(0,176,80,0.05)',
      description: 'Sites modernos e lojas virtuais completas que fortalecem sua presença digital e geram vendas online.',
      features: ['Design Responsivo', 'SEO Otimizado', 'Pagamentos Online'],
      footer: 'Entrega em 15-30 dias',
      footerIcon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z'
    },
    {
      title: 'Apps Mobile & <br> Web Apps',
      icon: 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z',
      color: '#60A5FA',
      bgIcon: 'rgba(96,165,250,0.2)',
      overlayBg: 'rgba(96,165,250,0.05)',
      description: 'Aplicativos personalizados para melhorar a experiência dos seus clientes, equipe ou negócio.',
      features: ['Interface Intuitiva', 'Multiplataforma', 'Notificações Push'],
      footer: 'iOS e Android',
      footerIcon: 'M7 2h10a2 2 0 012 2v16a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2z'
    },
    {
      title: 'Sistemas & <br> Plataformas',
      icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
      color: '#A78BFA',
      bgIcon: 'rgba(167,139,250,0.2)',
      overlayBg: 'rgba(167,139,250,0.05)',
      description: 'Sistemas personalizados para gestão interna, processos específicos e necessidades do seu negócio.',
      features: ['Dashboards', 'Relatórios', 'Integrações'],
      footer: 'Escalável e seguro',
      footerIcon: 'M12 11C13.657 11 15 9.657 15 8V6a3 3 0 00-6 0v2c0 1.657 1.343 3 3 3zM5 11h14a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2z'
    },
    {
      title: 'Automação de <br> Processos',
      icon: 'M13 10V3L4 14h7v7l9-11h-7z',
      color: '#F97316',
      bgIcon: 'rgba(249,115,22,0.2)',
      overlayBg: 'rgba(249,115,22,0.05)',
      description: 'Automatizamos tarefas e otimizamos processos, eliminando atividades manuais do seu dia a dia.',
      features: ['APIs & Webhooks', 'Fluxos Automáticos', 'Notificações'],
      footer: 'Economiza até 80% do tempo',
      footerIcon: 'M13 10V3L4 14h7v7l9-11h-7z'
    }
  ];

  // Criar cards do carrossel
  services.forEach((service, index) => {
    const card = document.createElement('div');
    card.className = 'w-full flex-shrink-0 px-4';
    card.innerHTML = `
      <div class="group bg-card backdrop-blur-sm rounded-2xl shadow-2xl transition-all duration-500 hover:scale-105 p-6 h-full flex flex-col" style="border:1px solid ${service.color}30">
        <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" style="background-color: ${service.color}05"></div>
        <div class="relative z-10 flex flex-col h-full">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 sm:w-16 sm:h-16 rounded-2xl flex items-center justify-center transition-colors duration-300 shadow-lg shrink-0" style="background-color: ${service.color}20">
              <svg class="w-8 h-8" style="color: ${service.color}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${service.icon}"/>
              </svg>
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-foreground">${service.title}</h3>
          </div>
          <p class="text-muted-foreground leading-relaxed mb-6 flex-grow text-sm sm:text-base">
            ${service.description}
          </p>
          <div class="space-y-3 mb-6">
            ${service.features.map(feature => `
              <div class="flex items-center text-sm" style="color: ${service.color}">
                <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                ${feature}
              </div>
            `).join('')}
          </div>
          <div class="mt-auto pt-4 border-t border-border">
            <div class="flex items-center text-sm font-medium" style="color: ${service.color}">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${service.footerIcon}"/>
              </svg>
              ${service.footer}
            </div>
          </div>
        </div>
      </div>
    `;
    carouselInner?.appendChild(card);
  });

  // Variáveis do carrossel
  let currentSlide = 0;
  const totalSlides = services.length;
  
  // Atualizar largura do carrossel no resize
  function updateCarouselWidth() {
    if (!carousel || !carouselInner) return;
    const slideWidth = carousel.offsetWidth;
    carouselInner.style.width = `${slideWidth * totalSlides}px`;
    const slides = carouselInner.children;
    Array.from(slides).forEach(slide => {
      (slide as HTMLElement).style.width = `${slideWidth}px`;
    });
    goToSlide(currentSlide);
  }

  // Ir para slide específico
  function goToSlide(index: number) {
    if (!carouselInner || !progressBar) return;
    currentSlide = index;
    const offset = -index * (carousel?.offsetWidth || 0);
    carouselInner.style.transform = `translateX(${offset}px)`;
    
    // Atualizar barra de progresso
    const progress = ((index + 1) / totalSlides) * 100;
    progressBar.style.width = `${progress}%`;
  }

  // Touch events para swipe
  let touchStartX = 0;
  let touchEndX = 0;

  carousel?.addEventListener('touchstart', (e) => {
    touchStartX = e.touches[0].clientX;
  });

  carousel?.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].clientX;
    handleSwipe();
  });

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;

    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        // Swipe left
        const newIndex = (currentSlide + 1) % totalSlides;
        goToSlide(newIndex);
      } else {
        // Swipe right
        const newIndex = (currentSlide - 1 + totalSlides) % totalSlides;
        goToSlide(newIndex);
      }
    }
  }

  // Inicialização
  window.addEventListener('resize', updateCarouselWidth);
  window.addEventListener('load', updateCarouselWidth);
  updateCarouselWidth();
</script>

