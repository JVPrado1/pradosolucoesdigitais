<style>
  /* Animações baseadas em scroll - otimizadas para mobile */
  .animate-on-scroll {
    opacity: 0;
    transition: all 0.4s ease-out;
  }
  
  .animate-on-scroll.fade-up {
    transform: translateY(15px);
  }
  
  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  .animation-delay-200 {
    transition-delay: 0.05s;
  }
  
  .animation-delay-400 {
    transition-delay: 0.1s;
  }
  
  .animation-delay-600 {
    transition-delay: 0.15s;
  }
  
  .animation-delay-800 {
    transition-delay: 0.2s;
  }
  
  .animation-delay-1000 {
    transition-delay: 0.25s;
  }
  
  /* Mobile: animações mais rápidas e sem delays */
  @media (max-width: 768px) {
    .animate-on-scroll {
      transition: all 0.3s ease-out;
    }
    
    .animation-delay-200,
    .animation-delay-400,
    .animation-delay-600,
    .animation-delay-800,
    .animation-delay-1000 {
      transition-delay: 0s !important;
    }
    
    .animate-on-scroll.fade-up {
      transform: translateY(10px);
    }
  }

  /* Carrossel Mobile */
  @media (max-width: 767px) {
    .services-carousel {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 1rem;
      padding: 0 1rem;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none;
      margin-bottom: 2rem; /* IE/Edge */
    }

    .services-carousel::-webkit-scrollbar {
      display: none; /* Chrome/Safari */
    }

    .service-card {
      flex: 0 0 85%;
      scroll-snap-align: start;
      margin-right: 1rem;
      min-height: 400px;
      max-height: 400px;
      display: flex;
      flex-direction: column;
    }

    .service-card:last-child {
      margin-right: 1rem;
    }

    /* Garantir altura uniforme dos elementos internos */
    .service-card .lg\\:h-40 {
      height: auto;
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }

    .service-card h3 {
      min-height: 3rem;
      display: flex;
      align-items: center;
    }

    .service-card p {
      flex: 1;
      display: flex;
      align-items: flex-start;
    }
  }

  /* Indicadores ativos */
  .carousel-dot.active {
    background-color: #00bc61 !important;
    transform: scale(1.2);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Só executa no mobile
    if (window.innerWidth >= 768) return;
    
    const carousel = document.getElementById('services-carousel');
    const indicators = document.querySelectorAll('.carousel-dot');
    
    if (!carousel) return;
    
    let currentSlide = 0;
    const totalSlides = 4;
    let isAnimating = false;
    let startX = 0;
    let scrollStart = 0;
    
    // Função para atualizar indicadores
    function updateIndicators(activeIndex: number) {
      indicators.forEach(function(dot, index) {
        dot.classList.remove('active', 'bg-[#00bc61]');
        dot.classList.add('bg-gray-300');
        
        if (index === activeIndex) {
          dot.classList.add('active', 'bg-[#00bc61]');
          dot.classList.remove('bg-gray-300');
        }
      });
    }
    
    // Função para ir para um slide específico
    function goToSlide(slideIndex: number) {
      if (!carousel || isAnimating) return;
      if (slideIndex < 0 || slideIndex >= totalSlides) return;
      
      isAnimating = true;
      const firstCard = carousel.querySelector('.service-card');
      if (!firstCard) return;
      
      const rect = firstCard.getBoundingClientRect();
      const cardWidth = rect.width;
      const gap = 16;
      const scrollLeft = slideIndex * (cardWidth + gap);
      
      carousel.scrollTo({
        left: scrollLeft,
        behavior: 'auto'
      });
      
      currentSlide = slideIndex;
      updateIndicators(currentSlide);
      
      setTimeout(function() {
        isAnimating = false;
      }, 50);
    }
    
    // Event listeners para os indicadores
    indicators.forEach(function(dot, index) {
      dot.addEventListener('click', function() {
        goToSlide(index);
      });
    });
    
    // Controle de touch/drag
    carousel.addEventListener('touchstart', function(e) {
      if (isAnimating) return;
      startX = e.touches[0].clientX;
      scrollStart = carousel.scrollLeft;
    });
    
    carousel.addEventListener('touchmove', function(e) {
      if (isAnimating) return;
      // Permitir scroll natural para melhor responsividade
    });
    
    carousel.addEventListener('touchend', function(e) {
      if (isAnimating) return;
      
      const endX = e.changedTouches[0].clientX;
      const diffX = startX - endX;
      const threshold = 30; // Minimum swipe distance - mais sensível
      
      if (Math.abs(diffX) > threshold) {
        if (diffX > 0 && currentSlide < totalSlides - 1) {
          // Swipe left - next slide
          goToSlide(currentSlide + 1);
        } else if (diffX < 0 && currentSlide > 0) {
          // Swipe right - previous slide
          goToSlide(currentSlide - 1);
        } else {
          // Return to current slide
          goToSlide(currentSlide);
        }
      } else {
        // Return to current slide if swipe was too small
        goToSlide(currentSlide);
      }
    });
    
    // Otimizar scroll para melhor performance
    let scrollTimeout: ReturnType<typeof setTimeout>;
    carousel.addEventListener('scroll', function() {
      if (!isAnimating) {
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(function() {
          // Force snap to current slide após scroll parar
          const firstCard = carousel.querySelector('.service-card');
          if (firstCard) {
            const rect = firstCard.getBoundingClientRect();
            const cardWidth = rect.width;
            const gap = 16;
            const targetScroll = currentSlide * (cardWidth + gap);
            
            if (Math.abs(carousel.scrollLeft - targetScroll) > 20) {
              carousel.scrollLeft = targetScroll;
            }
          }
        }, 100);
      }
    });
    
    // Inicializar
    updateIndicators(0);
    goToSlide(0);
  });
