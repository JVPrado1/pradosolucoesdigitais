---
// Hero moderno com design limpo e compacto

// Obter o idioma atual da URL
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/en') ? 'en' : 'pt';

// Traduções
const translations = {
  pt: {
    title: "Soluções Digitais",
    subtitle: "para o seu negócio",
    description: "Ajudamos empresas e profissionais a crescerem online, facilitarem o dia a dia e otimizarem processos através de tecnologias modernas e soluções inteligentes.",
    cta: {
      start: "Começar Projeto",
      portfolio: "Ver Portfólio"
    },
    services: {
      sites: "Sites",
      apps: "Apps",
      systems: "Sistemas",
      automation: "Automação"
    }
  },
  en: {
    title: "Digital Solutions",
    subtitle: "for your business",
    description: "We help companies and professionals grow online, simplify their daily operations, and optimize processes through modern technologies and intelligent solutions.",
    cta: {
      start: "Start Project",
      portfolio: "View Portfolio"
    },
    services: {
      sites: "Websites",
      apps: "Apps",
      systems: "Systems",
      automation: "Automation"
    }
  }
};

const t = translations[lang];
---

    
<section id="hero" class="relative flex items-center justify-center w-full md:h-[calc(100vh-60px)] h-[calc(100vh-130px)]  sm:h-screen bg-background pt-[60px]">
  <!-- Background Pattern -->

 
 

  <!-- Tech Background Elements - Oculto em telas muito pequenas -->
  <div class="absolute inset-0 overflow-visible  select-none pointer-events-none hidden sm:block">
    <!-- Code Snippets -->
    <div class="absolute top-10 left-5 text-[#00B050]/10 text-xs font-mono">
      const init = async () =&gt; &#123;<br/>
      &nbsp;&nbsp;await setup();<br/>
      &#125;
    </div>
    <div class="absolute bottom-20 right-10 text-blue-500/10 text-xs font-mono">
      function optimize() &#123;<br/>
      &nbsp;&nbsp;return true;<br/>
      &#125;
    </div>

    <!-- Tech Symbols -->
    <div class="absolute top-1/4 left-[15%] text-purple-500/10 text-xl rotate-12">&lt;/&gt;</div>
    <div class="absolute top-1/3 right-[20%] text-[#00B050]/10 text-xl">&#123; &#125;</div>
    <div class="absolute bottom-1/4 left-[25%] text-blue-500/10 text-xl">&lt;/&gt;</div>
    
    <!-- Floating Tech Words - Removidas as palavras React, Node.js e API -->
  </div>

  <!-- Floating Elements - Reduzidos em mobile -->
  <div class="absolute inset-0 overflow-visible">
    <div class="floating-element absolute top-20 left-10 w-1.5 md:w-2 h-1.5 md:h-2 bg-[#00B050] rounded-full opacity-60"></div>
    <div class="floating-element absolute top-40 right-20 w-0.5 md:w-1 h-0.5 md:h-1 bg-foreground rounded-full opacity-40"></div>
    <div class="floating-element absolute bottom-40 left-20 w-1 md:w-1.5 h-1 md:h-1.5 bg-[#00B050] rounded-full opacity-50"></div>
    <div class="floating-element absolute bottom-20 right-40 w-0.5 md:w-1 h-0.5 md:h-1 bg-foreground rounded-full opacity-30"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-6 lg:px-8 w-full  flex flex-col justify-center items-center">
  
    <!-- Main Content -->
    <div class="text-center mb-8 ">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6 leading-tight font-manrope">
        <span class="text-foreground">
          {t.title}
        </span>
        <br />
        <span class="bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">
          {t.subtitle}
        </span>
      </h1>
    
      <p class="text-base sm:text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed  md:mb-2 px-2">
        {t.description}
      </p>
    </div>

    <!-- Services Grid (para desktop) / Grid (para mobile) -->
    <div class="hidden sm:grid sm:grid-cols-2 gap-3 md:gap-4 mb-8 md:mb-12 max-w-3xl mx-auto">
      
      <!-- Site & E-commerce -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg md:rounded-xl border border-border p-3 md:p-4 hover:border-[#00B050]/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2 md:gap-3">
          <div class="w-8 h-8 md:w-10 md:h-10 bg-[#00B050]/20 rounded-md md:rounded-lg flex items-center justify-center shrink-0 group-hover:bg-[#00B050]/30 transition-colors duration-300">
            <svg class="w-4 h-4 md:w-5 md:h-5 text-[#00B050]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold text-foreground group-hover:text-[#00B050] transition-colors duration-300">
            {lang === 'pt' ? 'Sites & E-commerces' : 'Websites & E-commerce'}
          </h3>
        </div>
      </a>

      <!-- Aplicativos -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg md:rounded-xl border border-border p-3 md:p-4 hover:border-blue-500/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2 md:gap-3">
          <div class="w-8 h-8 md:w-10 md:h-10 bg-blue-500/20 rounded-md md:rounded-lg flex items-center justify-center shrink-0 group-hover:bg-blue-500/30 transition-colors duration-300">
            <svg class="w-4 h-4 md:w-5 md:h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold text-foreground group-hover:text-blue-400 transition-colors duration-300">
            {lang === 'pt' ? 'Aplicativos' : 'Applications'}
          </h3>
        </div>
      </a>

      <!-- Sistemas & Plataformas -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg md:rounded-xl border border-border p-3 md:p-4 hover:border-purple-500/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2 md:gap-3">
          <div class="w-8 h-8 md:w-10 md:h-10 bg-purple-500/20 rounded-md md:rounded-lg flex items-center justify-center shrink-0 group-hover:bg-purple-500/30 transition-colors duration-300">
            <svg class="w-4 h-4 md:w-5 md:h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold text-foreground group-hover:text-purple-400 transition-colors duration-300">
            {lang === 'pt' ? 'Sistemas & Plataformas' : 'Systems & Platforms'}
          </h3>
        </div>
      </a>

      <!-- Automação -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg md:rounded-xl border border-border p-3 md:p-4 hover:border-orange-500/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2 md:gap-3">
          <div class="w-8 h-8 md:w-10 md:h-10 bg-orange-500/20 rounded-md md:rounded-lg flex items-center justify-center shrink-0 group-hover:bg-orange-500/30 transition-colors duration-300">
            <svg class="w-4 h-4 md:w-5 md:h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold text-foreground group-hover:text-orange-400 transition-colors duration-300">
            {lang === 'pt' ? 'Automação' : 'Automation'}
          </h3>
        </div>
      </a>
    </div>

    <!-- Grid para Mobile (2 colunas) -->
    <div class="sm:hidden mb-8 grid grid-cols-2 gap-2 w-full max-w-[80%] mx-auto">
      <!-- Site & E-commerce -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg border border-border p-2 hover:border-[#00B050]/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-[#00B050]/20 rounded-md flex items-center justify-center shrink-0 group-hover:bg-[#00B050]/30 transition-colors duration-300">
            <svg class="w-4 h-4 text-[#00B050]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
          </div>
          <h3 class="text-xs font-bold text-foreground group-hover:text-[#00B050] transition-colors duration-300">{t.services.sites}</h3>
        </div>
      </a>

      <!-- Aplicativos -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg border border-border p-2 hover:border-blue-500/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-blue-500/20 rounded-md flex items-center justify-center shrink-0 group-hover:bg-blue-500/30 transition-colors duration-300">
            <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xs font-bold text-foreground group-hover:text-blue-400 transition-colors duration-300">{t.services.apps}</h3>
        </div>
      </a>

      <!-- Sistemas & Plataformas -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg border border-border p-2 hover:border-purple-500/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-purple-500/20 rounded-md flex items-center justify-center shrink-0 group-hover:bg-purple-500/30 transition-colors duration-300">
            <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <h3 class="text-xs font-bold text-foreground group-hover:text-purple-400 transition-colors duration-300">{t.services.systems}</h3>
        </div>
      </a>

      <!-- Automação -->
      <a href="#services" class="group bg-card backdrop-blur-sm rounded-lg border border-border p-2 hover:border-orange-500/30 transition-all duration-300 hover:scale-[1.02] cursor-pointer">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-orange-500/20 rounded-md flex items-center justify-center shrink-0 group-hover:bg-orange-500/30 transition-colors duration-300">
            <svg class="w-4 h-4 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="text-xs font-bold text-foreground group-hover:text-orange-400 transition-colors duration-300">{t.services.automation}</h3>
        </div>
      </a>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 md:gap-6 justify-center items-center max-w-[90%] sm:max-w-full mx-auto">
      <a href="#contact" class="w-full sm:w-auto inline-flex items-center justify-center bg-[#00B050] hover:bg-[#00B050]/90 text-white px-6 md:px-8 py-3 md:py-4 rounded-lg md:rounded-xl font-semibold transition-all duration-300 hover:scale-[1.02] shadow-lg hover:shadow-[#00B050]/25" >
        <span>{t.cta.start}</span>
        <svg class="ml-2 w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
      
      <a href="#portfolio" class="w-full sm:w-auto inline-flex items-center justify-center bg-card backdrop-blur-sm border border-border hover:border-[#00B050]/50 hover:bg-card-hover text-foreground px-6 md:px-8 py-3 md:py-4 rounded-lg md:rounded-xl font-semibold transition-all duration-300 hover:scale-[1.02]">
        <svg class="mr-2 w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        <span>{t.cta.portfolio}</span>
      </a>
    </div>
  </div>
</section>

<script is:inline>
  // Código para interações específicas que ainda possam ser necessárias
  document.addEventListener('DOMContentLoaded', () => {
    // Código para futuras interações
  });
</script>

<style>
  .floating-element {
    animation: float 6s ease-in-out infinite;
  }

  .floating-element:nth-child(2) {
    animation-delay: -2s;
  }

  .floating-element:nth-child(3) {
    animation-delay: -4s;
  }

  .floating-element:nth-child(4) {
    animation-delay: -6s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Glassmorphism effect */
  .backdrop-blur-sm {
    backdrop-filter: blur(8px);
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Animação suave para os elementos de fundo */
  .absolute {
    transition: opacity 0.3s ease;
  }
</style>
