<style>
  /* Animações baseadas em scroll - otimizadas para mobile */
  .animate-on-scroll {
    opacity: 0;
    transition: all 0.4s ease-out;
  }
  
  .animate-on-scroll.fade-up {
    transform: translateY(15px);
  }
  
  .animate-on-scroll.fade-right {
    transform: translateX(-15px);
  }
  
  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0) translateX(0);
  }
  
  /* Delays reduzidos para mobile */
  .animation-delay-200 {
    transition-delay: 0.05s;
  }
  
  .animation-delay-400 {
    transition-delay: 0.1s;
  }
  
  .animation-delay-600 {
    transition-delay: 0.15s;
  }
  
  /* Mobile: animações mais rápidas e sem delays */
  @media (max-width: 768px) {
    .animate-on-scroll {
      transition: all 0.3s ease-out;
    }

    /* Prevenir realces e seleção indesejada no mobile */
    * {
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      -webkit-touch-callout: none;
      -webkit-tap-highlight-color: transparent;
    }

    /* Permitir seleção apenas em inputs e textareas */
    input, textarea, [contenteditable] {
      -webkit-user-select: text;
      -moz-user-select: text;
      -ms-user-select: text;
      user-select: text;
    }

    /* Desabilitar hover effects em dispositivos touch */
    @media (hover: none) and (pointer: coarse) {
      *:hover {
        transform: none !important;
        background-color: inherit !important;
        box-shadow: inherit !important;
        border-color: inherit !important;
        color: inherit !important;
        scale: none !important;
      }
    }
    
    .animation-delay-200,
    .animation-delay-400,
    .animation-delay-600 {
      transition-delay: 0s !important;
    }
    
    .animate-on-scroll.fade-up {
      transform: translateY(10px);
    }
    
    .animate-on-scroll.fade-right {
      transform: translateX(-10px);
    }
  }
</style>

 