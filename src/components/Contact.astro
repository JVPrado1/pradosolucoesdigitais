---

<section id="contact" class="py-16 relative overflow-hidden bg-background transition-colors duration-300" data-form-translations={formTranslations}>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 50px 50px;"></div>
  </div>

  <!-- Floating Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="floating-element absolute top-20 left-10 w-2 h-2 bg-[#00B050] rounded-full opacity-40"></div>
    <div class="floating-element absolute top-40 right-20 w-1 h-1 bg-foreground rounded-full opacity-30"></div>
    <div class="floating-element absolute bottom-40 left-20 w-1.5 h-1.5 bg-[#00B050] rounded-full opacity-35"></div>
    <div class="floating-element absolute bottom-20 right-40 w-1 h-1 bg-foreground rounded-full opacity-25"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-2xl md:text-5xl font-bold mb-6 leading-tight">
        <span class="text-foreground">{t.title}</span>
        <br />
        <span class="bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">{t.titleHighlight}</span>
      </h2>
      <p class="text-base md:text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">{t.description}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Formulário de Contato -->
      <div class="lg:col-span-2 bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl p-8" data-aos="fade-up">
        <h3 class="text-lg md:text-2xl font-bold text-foreground mb-6">{t.formTitle}</h3>
        
        <form id="whatsapp-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-muted-foreground font-medium mb-3">{t.labels.name} <span class="text-red-400">*</span></label>
              <input type="text" id="name" name="name" required class="w-full px-6 py-4 bg-card backdrop-blur-sm border border-border rounded-xl text-foreground placeholder-muted-foreground/60 focus:border-[#00B050]/50 focus:outline-none focus:ring-2 focus:ring-[#00B050]/20 transition-all duration-300" placeholder={t.placeholders.name}>
            </div>
            <div>
              <label for="email" class="block text-muted-foreground font-medium mb-3">{t.labels.email} <span class="text-red-400">*</span></label>
              <input type="email" id="email" name="email" required class="w-full px-6 py-4 bg-card backdrop-blur-sm border border-border rounded-xl text-foreground placeholder-muted-foreground/60 focus:border-[#00B050]/50 focus:outline-none focus:ring-2 focus:ring-[#00B050]/20 transition-all duration-300" placeholder={t.placeholders.email}>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="phone" class="block text-muted-foreground font-medium mb-3">{t.labels.phone}</label>
              <input type="tel" id="phone" name="phone" class="w-full px-6 py-4 bg-card backdrop-blur-sm border border-border rounded-xl text-foreground placeholder-muted-foreground/60 focus:border-[#00B050]/50 focus:outline-none focus:ring-2 focus:ring-[#00B050]/20 transition-all duration-300" placeholder={t.placeholders.phone}>
            </div>
            <div>
              <label for="empresa" class="block text-muted-foreground font-medium mb-3">{t.labels.company}</label>
              <input type="text" id="empresa" name="empresa" class="w-full px-6 py-4 bg-card backdrop-blur-sm border border-border rounded-xl text-foreground placeholder-muted-foreground/60 focus:border-[#00B050]/50 focus:outline-none focus:ring-2 focus:ring-[#00B050]/20 transition-all duration-300" placeholder={t.placeholders.company}>
            </div>
          </div>
          
          <div>
            <label for="tipo-projeto" class="block text-muted-foreground font-medium mb-3">{t.labels.projectType} <span class="text-red-400">*</span></label>
            <select id="tipo-projeto" name="tipo-projeto" required class="w-full px-6 py-4 bg-card backdrop-blur-sm border border-border rounded-xl text-foreground focus:border-[#00B050]/50 focus:outline-none focus:ring-2 focus:ring-[#00B050]/20 transition-all duration-300">
              {t.projectTypes.map((type, index) => <option value={index === 0 ? "" : type} class="bg-background">{type}</option>)}
            </select>
          </div>
          
          <div>
            <label for="orcamento" class="block text-muted-foreground font-medium mb-3">{t.labels.budget}</label>
            <select id="orcamento" name="orcamento" class="w-full px-6 py-4 bg-card backdrop-blur-sm border border-border rounded-xl text-foreground focus:border-[#00B050]/50 focus:outline-none focus:ring-2 focus:ring-[#00B050]/20 transition-all duration-300">
              {t.budgetRanges.map((range, index) => <option value={index === 0 ? "" : range} class="bg-background">{range}</option>)}
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-muted-foreground font-medium mb-3">{t.labels.message} <span class="text-red-400">*</span></label>
            <textarea id="message" name="message" rows="5" required class="w-full px-6 py-4 bg-card backdrop-blur-sm border border-border rounded-xl text-foreground placeholder-muted-foreground/60 focus:border-[#00B050]/50 focus:outline-none focus:ring-2 focus:ring-[#00B050]/20 transition-all duration-300 resize-none" placeholder={t.placeholders.message}></textarea>
          </div>
          
          <button type="submit" class="w-full bg-[#25D366] hover:bg-[#25D366]/90 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 hover:shadow-lg hover:shadow-[#25D366]/20 border border-[#25D366]/20 cursor-pointer hover:translate-y-[-2px]">
