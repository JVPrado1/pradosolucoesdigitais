            </span>
          </button>
        </form>
      </div>

      <!-- Informações de Contato -->
      <div class="lg:col-span-1 space-y-6" data-aos="fade-up">
        <div class="bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-[#25D366]/10 transition-all duration-300 hover:border-[#25D366]/30 p-6">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0"><div class="w-12 h-12 bg-[#25D366]/20 rounded-xl flex items-center justify-center"><svg class="w-6 h-6 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.109"/></svg></div></div>
            <div>
              <h4 class="text-base md:text-lg font-semibold text-foreground mb-1">{t.contactInfo.whatsapp.title}</h4>
              <p class="text-muted-foreground text-sm mb-2">{t.contactInfo.whatsapp.description}</p>
              <a href="https://wa.me/5514997295849" target="_blank" rel="noopener noreferrer" class="text-[#25D366] hover:text-[#25D366]/80 transition-colors font-medium text-sm">(14) 99729-5849</a>
            </div>
          </div>
        </div>
        <div class="bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-blue-500/10 transition-all duration-300 hover:border-blue-500/30 p-6">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0"><div class="w-12 h-12 bg-blue-500/20 rounded-xl flex items-center justify-center"><svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg></div></div>
            <div>
              <h4 class="text-base md:text-lg font-semibold text-foreground mb-1">{t.contactInfo.email.title}</h4>
              <p class="text-muted-foreground text-sm mb-2">{t.contactInfo.email.description}</p>
              <a href="mailto:contato@pradosolucoes.com" class="text-blue-400 hover:text-blue-300 transition-colors font-medium text-sm">contato@pradosolucoes.com</a>
            </div>
          </div>
        </div>
        <div class="bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-purple-500/10 transition-all duration-300 hover:border-purple-500/30 p-6">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0"><div class="w-12 h-12 bg-purple-500/20 rounded-xl flex items-center justify-center"><svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg></div></div>
            <div>
              <h4 class="text-base md:text-lg font-semibold text-foreground mb-1">{t.contactInfo.location.title}</h4>
              <p class="text-muted-foreground text-sm mb-2">{t.contactInfo.location.description}</p>
              <div class="text-purple-400 font-medium text-sm">{t.contactInfo.location.city}</div>
            </div>
          </div>
        </div>
        <div class="bg-card backdrop-blur-sm rounded-2xl border border-border shadow-2xl hover:shadow-orange-500/10 transition-all duration-300 hover:border-orange-500/30 p-6">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0"><div class="w-12 h-12 bg-orange-500/20 rounded-xl flex items-center justify-center"><svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg></div></div>
            <div>
              <h4 class="text-base md:text-lg font-semibold text-foreground mb-1">{t.contactInfo.hours.title}</h4>
              <p class="text-muted-foreground text-sm mb-2">{t.contactInfo.hours.description}</p>
              <div class="text-orange-400 font-medium text-sm">{t.contactInfo.hours.emergency}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .floating-element { animation: float 6s ease-in-out infinite; }
  .floating-element:nth-child(2) { animation-delay: -2s; }
  .floating-element:nth-child(3) { animation-delay: -4s; }
  .floating-element:nth-child(4) { animation-delay: -6s; }
  @keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-20px); } }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('contact');
    if (!section) return;

    const formTranslationsString = section.dataset.formTranslations;
    if (!formTranslationsString) return;

    const t = JSON.parse(formTranslationsString);
    const form = document.getElementById('whatsapp-form') as HTMLFormElement;
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(form);
        const name = formData.get('name');
        const email = formData.get('email');
        const phone = formData.get('phone');
        const empresa = formData.get('empresa');
        const tipoProjeto = formData.get('tipo-projeto');
        const orcamento = formData.get('orcamento');
        const message = formData.get('message');
        
        let whatsappMessage = `${t.greeting}\n\n`;
        whatsappMessage += `*${t.title}*\n\n`;
        whatsappMessage += `*${t.name}:* ${name}\n`;
        whatsappMessage += `*${t.email}:* ${email}\n`;
        
        if (phone) whatsappMessage += `*${t.phone}:* ${phone}\n`;
        if (empresa) whatsappMessage += `*${t.company}:* ${empresa}\n`;
        if (tipoProjeto) whatsappMessage += `*${t.projectType}:* ${tipoProjeto}\n`;
        if (orcamento) whatsappMessage += `*${t.budget}:* ${orcamento}\n`;
        
        whatsappMessage += `\n*${t.message}:*\n${message}`;
        
        const encodedMessage = encodeURIComponent(whatsappMessage);
        const phoneNumber = '5514997295849';
        const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
        
        window.open(whatsappURL, '_blank');
      });
    }
  });
</script>
