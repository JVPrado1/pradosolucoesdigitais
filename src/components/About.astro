---

<section id="about" class="relative py-16 bg-background z-1 overflow-visible transition-colors duration-300 aos-init aos-animate animate-zoom-in" data-aos="fade-up" data-aos-duration="1000">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 50px 50px;"></div>
  </div>

  <!-- Floating Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="floating-element absolute top-20 left-10 w-2 h-2 bg-[#00B050] rounded-full opacity-40"></div>
    <div class="floating-element absolute top-40 right-20 w-1 h-1 bg-blue-400 rounded-full opacity-30"></div>
    <div class="floating-element absolute bottom-40 left-20 w-1.5 h-1.5 bg-purple-400 rounded-full opacity-35"></div>
    <div class="floating-element absolute bottom-20 right-40 w-1 h-1 bg-orange-400 rounded-full opacity-25"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 relative z-10">
    <!-- Header da Seção -->
    <div class="text-center mb-8 md:mb-20 animate-rotate-left" data-aos="fade-up">
      <h2 class="text-2xl md:text-5xl font-bold mb-3 md:mb-8 leading-tight">
        <span class="text-foreground">
          {t.title}
        </span>
        <span class="bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">
          {t.titleHighlight}
        </span>
      </h2>
      
      <p class="text-base md:text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed px-2">
        {t.description}
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-8 mb-10 md:mb-24 animate-fade-scale" data-aos="fade-up">
      <!-- Diferencial 1: Inovação -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-[#00B050]/30 transition-all duration-300 hover:bg-card-hover p-4 md:p-8 hover:scale-[1.02] h-full">
          <div class="flex items-start gap-3 md:gap-6">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 md:w-16 md:h-16 bg-[#00B050]/20 rounded-lg md:rounded-xl flex items-center justify-center text-[#00B050] group-hover:bg-[#00B050]/30 transition-colors duration-300">
                <svg class="w-5 h-5 md:w-8 md:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg md:text-xl font-semibold text-foreground mb-1 md:mb-3">{t.features.innovation.title}</h3>
              <p class="text-sm md:text-base text-muted-foreground leading-relaxed">
                {t.features.innovation.description}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Diferencial 2: Atendimento -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-blue-500/30 transition-all duration-300 hover:bg-card-hover p-4 md:p-8 hover:scale-[1.02] h-full">
          <div class="flex items-start gap-3 md:gap-6">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 md:w-16 md:h-16 bg-blue-500/20 rounded-lg md:rounded-xl flex items-center justify-center text-blue-400 group-hover:bg-blue-500/30 transition-colors duration-300">
                <svg class="w-5 h-5 md:w-8 md:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg md:text-xl font-semibold text-foreground mb-1 md:mb-3">{t.personalizedService.title}</h3>
              <p class="text-sm md:text-base text-muted-foreground leading-relaxed">
                {t.personalizedService.description}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Diferencial 3: Crescimento -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-purple-500/30 transition-all duration-300 hover:bg-card-hover p-4 md:p-8 hover:scale-[1.02] h-full">
          <div class="flex items-start gap-3 md:gap-6">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 md:w-16 md:h-16 bg-purple-500/20 rounded-lg md:rounded-xl flex items-center justify-center text-purple-400 group-hover:bg-purple-500/30 transition-colors duration-300">
                <svg class="w-5 h-5 md:w-8 md:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg md:text-xl font-semibold text-foreground mb-1 md:mb-3">{t.jointGrowth.title}</h3>
              <p class="text-sm md:text-base text-muted-foreground leading-relaxed">
                {t.jointGrowth.description}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Diferencial 4: Qualidade -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-orange-500/30 transition-all duration-300 hover:bg-card-hover p-4 md:p-8 hover:scale-[1.02] h-full">
          <div class="flex items-start gap-3 md:gap-6">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 md:w-16 md:h-16 bg-orange-500/20 rounded-lg md:rounded-xl flex items-center justify-center text-orange-400 group-hover:bg-orange-500/30 transition-colors duration-300">
                <svg class="w-5 h-5 md:w-8 md:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg md:text-xl font-semibold text-foreground mb-1 md:mb-3">{t.features.quality.title}</h3>
              <p class="text-sm md:text-base text-muted-foreground leading-relaxed">
                {t.features.quality.description}
              </p>
            </div>
          </div>
        </div>
