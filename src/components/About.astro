    </div>

    <!-- Nossa Missão -->
    <div class="text-center mb-10 md:mb-24 animate-zoom-in" data-aos="fade-up">
      <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border p-5 md:p-12">
        <div class="flex flex-col md:flex-row items-center md:items-start text-center md:text-left gap-3 md:gap-6 max-w-4xl mx-auto">
          <div class="flex-shrink-0">
            <div class="w-14 h-14 md:w-20 md:h-20 bg-gradient-to-br from-[#00B050]/20 to-blue-500/20 rounded-xl text-[#00B050] flex items-center justify-center mx-auto md:mx-0">
              <svg class="w-7 h-7 md:w-10 md:h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 00-2.91-.09zM12 15l-3-3a22 22 0 012-3.95A12.88 12.88 0 0122 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 01-4 2z"/>
              </svg>
            </div>
          </div>
          <div>
            <h3 class="text-xl md:text-3xl font-bold text-foreground mb-2 md:mb-1">{t.mission.title}</h3>
            <p class="text-sm md:text-base text-muted-foreground leading-relaxed">
              {t.mission.description}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 md:gap-6 animate-rotate-left" data-aos="fade-up">
      <!-- Feature 1 -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-[#00B050]/30 transition-all duration-300 hover:bg-card-hover p-3 md:p-6 hover:scale-[1.02] h-full flex flex-col">
          <div class="w-8 h-8 md:w-12 md:h-12 bg-[#00B050]/20 rounded-lg md:rounded-xl flex items-center justify-center text-[#00B050] group-hover:bg-[#00B050]/30 transition-colors duration-300 mb-2 md:mb-4 flex-shrink-0">
            <svg class="w-4 h-4 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-sm md:text-lg font-semibold text-foreground mb-1 md:mb-2">{t.agility.title}</h3>
          <p class="text-xs md:text-sm text-muted-foreground leading-relaxed">{t.agility.description}</p>
        </div>
      </div>

      <!-- Feature 2 -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-blue-500/30 transition-all duration-300 hover:bg-card-hover p-3 md:p-6 hover:scale-[1.02] h-full flex flex-col">
          <div class="w-8 h-8 md:w-12 md:h-12 bg-blue-500/20 rounded-lg md:rounded-xl flex items-center justify-center text-blue-400 group-hover:bg-blue-500/30 transition-colors duration-300 mb-2 md:mb-4 flex-shrink-0">
            <svg class="w-4 h-4 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-sm md:text-lg font-semibold text-foreground mb-1 md:mb-2">{t.modernDesign.title}</h3>
          <p class="text-xs md:text-sm text-muted-foreground leading-relaxed">{t.modernDesign.description}</p>
        </div>
      </div>

      <!-- Feature 3 -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-purple-500/30 transition-all duration-300 hover:bg-card-hover p-3 md:p-6 hover:scale-[1.02] h-full flex flex-col">
          <div class="w-8 h-8 md:w-12 md:h-12 bg-purple-500/20 rounded-lg md:rounded-xl flex items-center justify-center text-purple-400 group-hover:bg-purple-500/30 transition-colors duration-300 mb-2 md:mb-4 flex-shrink-0">
            <svg class="w-4 h-4 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-sm md:text-lg font-semibold text-foreground mb-1 md:mb-2">{t.highPerformance.title}</h3>
          <p class="text-xs md:text-sm text-muted-foreground leading-relaxed">{t.highPerformance.description}</p>
        </div>
      </div>

      <!-- Feature 4 -->
      <div class="group flex flex-col">
        <div class="bg-card backdrop-blur-sm rounded-xl md:rounded-2xl border border-border hover:border-orange-500/30 transition-all duration-300 hover:bg-card-hover p-3 md:p-6 hover:scale-[1.02] h-full flex flex-col">
          <div class="w-8 h-8 md:w-12 md:h-12 bg-orange-500/20 rounded-lg md:rounded-xl flex items-center justify-center text-orange-400 group-hover:bg-orange-500/30 transition-colors duration-300 mb-2 md:mb-4 flex-shrink-0">
            <svg class="w-4 h-4 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <h3 class="text-sm md:text-lg font-semibold text-foreground mb-1 md:mb-2">{t.completeSupport.title}</h3>
          <p class="text-xs md:text-sm text-muted-foreground leading-relaxed">{t.completeSupport.description}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .floating-element {
    animation: float 6s ease-in-out infinite;
  }

  .floating-element:nth-child(2) {
    animation-delay: -2s;
  }

  .floating-element:nth-child(3) {
    animation-delay: -4s;
  }

  .floating-element:nth-child(4) {
    animation-delay: -6s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Animação de scroll */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
</style>
