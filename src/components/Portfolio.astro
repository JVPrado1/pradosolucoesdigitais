          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section> 

<style>
  /* Animações baseadas em scroll - otimizadas para mobile */
  .animate-on-scroll {
    opacity: 0;
    transition: all 0.4s ease-out;
  }
  
  .animate-on-scroll.fade-up {
    transform: translateY(15px);
  }
  
  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  .animation-delay-200 {
    transition-delay: 0.05s;
  }
  
  .animation-delay-400 {
    transition-delay: 0.1s;
  }
  
  .animation-delay-600 {
    transition-delay: 0.15s;
  }
  
  .animation-delay-800 {
    transition-delay: 0.2s;
  }
  
  .animation-delay-1000 {
    transition-delay: 0.25s;
  }
  
  /* Mobile: animações mais rápidas e sem delays */
  @media (max-width: 768px) {
    .animate-on-scroll {
      transition: all 0.3s ease-out;
    }
    
    .animation-delay-200,
    .animation-delay-400,
    .animation-delay-600,
    .animation-delay-800,
    .animation-delay-1000 {
      transition-delay: 0s !important;
    }
    
    .animate-on-scroll.fade-up {
      transform: translateY(10px);
    }
  }

  /* Carrossel Mobile */
  @media (max-width: 767px) {
    .portfolio-carousel {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      gap: 1rem;
      padding: 0 1rem;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE/Edge */
    }

    .portfolio-carousel::-webkit-scrollbar {
      display: none; /* Chrome/Safari */
    }

    .portfolio-card {
      flex: 0 0 85%;
      scroll-snap-align: start;
      margin-right: 1rem;
    }

    .portfolio-card:last-child {
      margin-right: 1rem;
    }
  }

  /* Indicadores ativos */
  .portfolio-dot.active {
    background-color: #00bc61 !important;
    transform: scale(1.2);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Só executa no mobile
    if (window.innerWidth >= 768) return;
    
    const carousel = document.getElementById('portfolio-carousel');
    const indicators = document.querySelectorAll('.portfolio-dot');
    
    if (!carousel) return;
    
    let currentSlide = 0;
    const totalSlides = 4;
    let isScrolling = false;
    let scrollTimeout;
    
    // Função para atualizar indicadores
    function updateIndicators(activeIndex) {
      indicators.forEach(function(dot, index) {
        dot.classList.remove('active', 'bg-[#00bc61]');
        dot.classList.add('bg-gray-300');
        
        if (index === activeIndex) {
          dot.classList.add('active', 'bg-[#00bc61]');
          dot.classList.remove('bg-gray-300');
        }
      });
    }
    
    // Função para ir para um slide específico
    function goToSlide(slideIndex) {
      if (!carousel) return;
      
      const firstCard = carousel.querySelector('.portfolio-card');
      if (!firstCard) return;
      
      const rect = firstCard.getBoundingClientRect();
      const cardWidth = rect.width;
      const gap = 16;
      const scrollLeft = slideIndex * (cardWidth + gap);
      
      carousel.scrollTo({
        left: scrollLeft,
        behavior: 'smooth'
      });
      
      currentSlide = slideIndex;
      updateIndicators(currentSlide);
    }
    
    // Função para encontrar o slide mais próximo
    function findNearestSlide() {
      if (!carousel) return currentSlide;
      
      const firstCard = carousel.querySelector('.portfolio-card');
      if (!firstCard) return currentSlide;
      
      const rect = firstCard.getBoundingClientRect();
      const cardWidth = rect.width;
      const gap = 16;
      const scrollLeft = carousel.scrollLeft;
      
      return Math.round(scrollLeft / (cardWidth + gap));
    }
    
    // Event listeners para os indicadores
    indicators.forEach(function(dot, index) {
      dot.addEventListener('click', function() {
        goToSlide(index);
      });
    });
    
    // Detectar scroll manual e forçar snap para 1 item
    carousel.addEventListener('scroll', function() {
      if (isScrolling) return;
      
      // Limpar timeout anterior
      if (scrollTimeout) {
        clearTimeout(scrollTimeout);
      }
      
      // Aguardar o fim do scroll para fazer o snap
      scrollTimeout = setTimeout(function() {
        const nearestSlide = findNearestSlide();
        
        if (nearestSlide !== currentSlide && nearestSlide >= 0 && nearestSlide < totalSlides) {
          isScrolling = true;
          goToSlide(nearestSlide);
          
          setTimeout(function() {
            isScrolling = false;
          }, 300);
        }
      }, 150);
    });
    
    // Inicializar
    updateIndicators(0);
  });
</script> 