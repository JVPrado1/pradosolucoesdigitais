<style>
  /* Animações baseadas em scroll - otimizadas para mobile */
  .animate-on-scroll {
    opacity: 0;
    transition: all 0.4s ease-out;
  }
  
  .animate-on-scroll.fade-up {
    transform: translateY(15px);
  }
  
  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  .animation-delay-200 {
    transition-delay: 0.05s;
  }
  
  .animation-delay-400 {
    transition-delay: 0.1s;
  }
  
  .animation-delay-600 {
    transition-delay: 0.15s;
  }
  
  .animation-delay-800 {
    transition-delay: 0.2s;
  }
  
  .animation-delay-1000 {
    transition-delay: 0.25s;
  }
  
  /* Mobile: animações mais rápidas e sem delays */
  @media (max-width: 768px) {
    .animate-on-scroll {
      transition: all 0.3s ease-out;
    }
    
    .animation-delay-200,
    .animation-delay-400,
    .animation-delay-600,
    .animation-delay-800,
    .animation-delay-1000 {
      transition-delay: 0s !important;
    }
    
    .animate-on-scroll.fade-up {
      transform: translateY(10px);
    }
  }

  /* Carrossel Mobile - Simplificado */
  @media (max-width: 767px) {
    .portfolio-carousel {
      display: block;
      width: 100%;
      min-height: auto;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      -webkit-touch-callout: none;
      -webkit-tap-highlight-color: transparent;
    }

    .portfolio-card {
      width: 100%;
      display: none;
      margin-bottom: 1rem;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      -webkit-touch-callout: none;
      -webkit-tap-highlight-color: transparent;
    }

    .portfolio-card.active {
      display: block;
      opacity: 1;
      visibility: visible;
      transform: translateX(0);
      transition: opacity 0.3s ease, transform 0.3s ease;
      pointer-events: auto;
    }
  }

  /* Indicadores ativos */
  .portfolio-dot.active {
    background-color: #00bc61 !important;
    transform: scale(1.2);
  }

  /* Desabilitar hover effects em dispositivos touch */
  @media (hover: none) and (pointer: coarse) {
    .portfolio-card:hover,
    .group:hover,
    .hover\\:shadow-2xl,
    .hover\\:-translate-y-2,
    .hover\\:bg-black\\/20,
    .group-hover\\:scale-105,
    .group-hover\\:translate-x-1 {
      transform: none !important;
      background-color: inherit !important;
      box-shadow: inherit !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Só executa no mobile
    if (window.innerWidth >= 768) return;
    
    const carousel = document.getElementById('portfolio-carousel');
    const indicators = document.querySelectorAll('.portfolio-dot');
    const cards = carousel?.querySelectorAll('.portfolio-card');
    
    if (!carousel || !cards) return;
    
    let currentSlide = 0;
    const totalSlides = cards.length;
    let touchStartX = 0;
    let touchStartY = 0;
    let isDragging = false;
    
    // Função para mostrar slide específico
    function showSlide(index: number) {
      if (index < 0 || index >= totalSlides || !cards) return;
      
      // Esconder todos os cards
      cards.forEach(function(card) {
        card.classList.remove('active');
      });
      
      // Mostrar card atual
      if (cards[index]) {
        cards[index].classList.add('active');
      }
      
      currentSlide = index;
      updateIndicators(index);
    }
    
    // Função para atualizar indicadores
    function updateIndicators(activeIndex: number) {
      indicators.forEach(function(dot, index) {
        dot.classList.remove('active', 'bg-[#00bc61]');
        dot.classList.add('bg-gray-300');
        
        if (index === activeIndex) {
          dot.classList.add('active', 'bg-[#00bc61]');
          dot.classList.remove('bg-gray-300');
        }
      });
    }
    
    // Event listeners para os indicadores
    indicators.forEach(function(dot, index) {
      dot.addEventListener('click', function() {
        showSlide(index);
      });
    });
    
    // Controle de touch simplificado
    carousel.addEventListener('touchstart', function(e) {
      touchStartX = e.touches[0].clientX;
      touchStartY = e.touches[0].clientY;
      isDragging = false;
    });
    
    carousel.addEventListener('touchmove', function(e) {
      if (!isDragging) {
        const currentX = e.touches[0].clientX;
        const currentY = e.touches[0].clientY;
        const diffX = Math.abs(currentX - touchStartX);
        const diffY = Math.abs(currentY - touchStartY);
        
        // Detectar se é swipe horizontal
        if (diffX > 15 && diffX > diffY) {
          isDragging = true;
          e.preventDefault(); // Prevenir scroll vertical
        }
      } else {
        e.preventDefault(); // Continuar prevenindo scroll durante drag
      }
    });
    
    carousel.addEventListener('touchend', function(e) {
      if (isDragging) {
        const touchEndX = e.changedTouches[0].clientX;
        const diffX = touchStartX - touchEndX;
        
        // Swipe com threshold de 50px
        if (Math.abs(diffX) > 50) {
          if (diffX > 0) {
            // Swipe left - próximo slide (com navegação circular)
            const nextSlide = currentSlide < totalSlides - 1 ? currentSlide + 1 : 0;
            showSlide(nextSlide);
          } else if (diffX < 0) {
            // Swipe right - slide anterior (com navegação circular)
            const prevSlide = currentSlide > 0 ? currentSlide - 1 : totalSlides - 1;
            showSlide(prevSlide);
          }
        }
      }
      isDragging = false;
    });
    
    // Cards já têm pointer-events: none no CSS

    // Inicializar - mostrar primeiro slide
    showSlide(0);
  });
</script> 