---
// Header component
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header" style="background: transparent !important; border: none !important; box-shadow: none !important;">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2" >
    <div class="flex justify-between items-center h-16">
      
      <!-- Logo à esquerda -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <img src="/logo.png" alt="Prado Soluções Digitais" class="w-auto h-10 group-hover:scale-105 transition-all duration-300" />
        </a>
      </div>

      <!-- Menu Desktop à direita -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#hero" class="text-white hover:text-[#00bc61] px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
            Início
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#00bc61] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="#about" class="text-white hover:text-[#00bc61] px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
            Sobre
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#00bc61] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="#services" class="text-white hover:text-[#00bc61] px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
            Serviços
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#00bc61] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="#portfolio" class="text-white hover:text-[#00bc61] px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
            Portfólio
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#00bc61] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="#contact" class="bg-[#00bc61] text-white px-6 py-2 rounded-full text-sm font-medium hover:bg-[#00a555] hover:shadow-xl hover:shadow-[#00bc61]/25 hover:scale-105 transition-all duration-200">
            Contato
          </a>
        </div>
      </div>

      <!-- Menu Mobile -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-[#A7A9AC] hover:text-[#00bc61] hover:bg-gray-900 transition-colors duration-200" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Abrir menu principal</span>
          <!-- Hamburguer Icon -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Menu Mobile (Hidden by default) -->
    <div class="md:hidden mobile-menu hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-black border-t border-gray-800">
        <a href="#hero" class="text-white hover:text-[#00bc61] block px-3 py-2 text-base font-medium transition-colors duration-200">Início</a>
        <a href="#about" class="text-white hover:text-[#00bc61] block px-3 py-2 text-base font-medium transition-colors duration-200">Sobre</a>
        <a href="#services" class="text-white hover:text-[#00bc61] block px-3 py-2 text-base font-medium transition-colors duration-200">Serviços</a>
        <a href="#portfolio" class="text-white hover:text-[#00bc61] block px-3 py-2 text-base font-medium transition-colors duration-200">Portfólio</a>
        <a href="#contact" class="bg-[#00bc61] text-white block px-6 py-2 rounded-full text-base font-medium text-center mx-3 mt-4 hover:bg-[#00a555] hover:shadow-lg transition-all duration-200">Contato</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Toggle mobile menu
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.querySelector('.mobile-menu-button');
    const menu = document.querySelector('.mobile-menu');
    
    if (button && menu) {
      button.addEventListener('click', function() {
        menu.classList.toggle('hidden');
      });
    }

    // Fechar menu mobile ao clicar em um link
    const mobileLinks = document.querySelectorAll('.mobile-menu a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', function() {
        if (menu) {
          menu.classList.add('hidden');
        }
      });
    });
  });

  // Smooth scroll for anchor links with header offset
  document.addEventListener('DOMContentLoaded', function() {
    const links = document.querySelectorAll('a[href^="#"]');
    
    links.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
        const target = href ? document.querySelector(href) : null;
        if (target) {
          const headerHeight = 80; // Altura do header fixo
          const targetPosition = (target as HTMLElement).offsetTop - headerHeight;
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      });
    });
  });

  // Header scroll effect with Tailwind classes
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.getElementById('main-header');
    const logo = document.querySelector('#main-header img');
    
    if (header) {
      function handleScroll() {
        const scrolled = window.scrollY > 50;
        
        if (scrolled) {
          // Estado scrolled - remove transparência e adiciona fundo
          header!.style.background = 'rgba(0, 0, 0, 0.95)';
          header!.style.backdropFilter = 'blur(16px)';
          header!.style.borderBottom = '1px solid rgba(0, 188, 97, 0.2)';
          header!.style.boxShadow = '0 25px 50px -12px rgba(0, 0, 0, 0.25)';
          
          // Logo menor no scroll
          if (logo) {
            logo.classList.add('scale-95');
          }
        } else {
          // Estado inicial transparente
          header!.style.setProperty('background', 'transparent', 'important');
          header!.style.setProperty('backdrop-filter', 'none', 'important');
          header!.style.setProperty('border-bottom', 'none', 'important');
          header!.style.setProperty('box-shadow', 'none', 'important');
          
          // Logo normal
          if (logo) {
            logo.classList.remove('scale-95');
          }
        }
      }
      
      window.addEventListener('scroll', handleScroll);
      // Verificar estado inicial
      handleScroll();
    }
  });
</script>


