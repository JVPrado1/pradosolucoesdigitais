<script is:inline>
  function updateFooterLogo() {
    const logoElement = document.getElementById('footer-logo');
    if (!logoElement) return;

    // Verifica o tema diretamente do atributo no HTML ou do localStorage
    const isDarkMode = document.documentElement.classList.contains('dark') || 
                       (localStorage.getItem('theme') === 'dark') || 
                       (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);

    if (isDarkMode) {
      logoElement.src = '/logo.png'; // Logo branca para tema escuro
    } else {
      logoElement.src = '/logo-preto.png'; // Logo preta para tema claro
    }
  }

  // Atualiza a logo na carga inicial da página
  document.addEventListener('DOMContentLoaded', updateFooterLogo);

  // Ouve mudanças no localStorage para sincronizar entre abas/componentes
  window.addEventListener('storage', (event) => {
    if (event.key === 'theme') {
      updateFooterLogo();
    }
  });
  
  // Ouve o evento customizado disparado pelo Header
  document.addEventListener('theme-changed', updateFooterLogo);

</script>
